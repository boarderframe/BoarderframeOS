# Kroger OAuth2 Configuration Template
# Copy this file to .env and fill in your actual credentials
# NEVER commit the .env file to version control

# Required: Kroger API Client Credentials
KROGER_CLIENT_ID=your_client_id_here
KROGER_CLIENT_SECRET=your_client_secret_here

# Required for user authorization flows
KROGER_REDIRECT_URI=http://localhost:8080/callback

# Optional: Environment selection (PRODUCTION or CERTIFICATION)
# Default: PRODUCTION
KROGER_ENVIRONMENT=CERTIFICATION

# Optional: Master encryption key for token storage
# If not set, a key will be generated (not recommended for production)
KROGER_ENCRYPTION_KEY=generate_a_secure_256_bit_key_here

# Optional: Logging configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/kroger_mcp/auth.log

# Rate limiting configuration
RATE_LIMIT_DAILY_PRODUCTS=10000
RATE_LIMIT_DAILY_CART=5000
RATE_LIMIT_DAILY_IDENTITY=5000
RATE_LIMIT_DAILY_LOCATIONS=1600

# Security configuration
TOKEN_CACHE_TTL_SECONDS=1740  # 29 minutes (refresh 1 min before 30 min expiry)
MAX_TOKEN_REFRESH_ATTEMPTS=3
ENABLE_TOKEN_ENCRYPTION=true
CSRF_STATE_TIMEOUT_MINUTES=15

# Development/Testing
KROGER_DEV_MODE=false
DISABLE_SSL_VERIFY=false  # NEVER set to true in production