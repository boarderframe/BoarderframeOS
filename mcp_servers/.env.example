# Application Configuration
PROJECT_NAME="MCP Server Manager"
VERSION="1.0.0"
API_V1_STR="/api/v1"
SECRET_KEY="your-secret-key-here"

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8000,http://localhost:8080"

# Database Configuration
POSTGRES_SERVER="localhost"
POSTGRES_USER="mcp_manager"
POSTGRES_PASSWORD="mcp_password"
POSTGRES_DB="mcp_manager_db"
POSTGRES_PORT="5432"

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# MCP Server Management
MCP_SERVERS_CONFIG_PATH="./config/mcp_servers.yaml"
MCP_SERVERS_DATA_PATH="./data/mcp_servers"

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090