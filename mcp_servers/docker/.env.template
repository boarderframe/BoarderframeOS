# MCP Server Manager - Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Production Security Keys (CHANGE THESE!)
WEBUI_SECRET_KEY=your-secret-key-change-this-in-production
GRAFANA_ADMIN_PASSWORD=admin-change-this-password
REDIS_PASSWORD=redis-secure-password-change-this

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info
DEBUG_ENABLED=false

# Redis Configuration
REDIS_URL=redis://redis:6379
DATABASE_URL=redis://redis:6379

# Security Settings
RATE_LIMIT_ENABLED=true
SECURITY_AUDIT_ENABLED=true

# Monitoring Configuration
PROMETHEUS_RETENTION_TIME=30d
PROMETHEUS_RETENTION_SIZE=10GB

# Open WebUI Configuration
ENABLE_SIGNUP=false
ENABLE_LOGIN_FORM=true
OLLAMA_BASE_URL=http://ollama:11434
MCP_CONNECTOR_URL=http://mcp-manager:8080
ENABLE_MCP_CONNECTOR=true

# SSL/TLS Configuration (for production nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-west-2

# Resource Limits (optional overrides)
MCP_MANAGER_CPU_LIMIT=1.0
MCP_MANAGER_MEMORY_LIMIT=512M
REDIS_MEMORY_LIMIT=256M
OLLAMA_MEMORY_LIMIT=4G